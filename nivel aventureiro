#include <stdio.h>

int main(void) {
    int opcao = 0;
    const int movimentoTorre = 5;
    const int movimentoBispo = 5;
    const int movimentoRainha = 8;
    const int movimentoCavaloBaixo = 2;    /* duas casas para baixo */
    const int movimentoCavaloEsquerda = 1; /* uma casa para a esquerda */

    do {
        printf("\n=== SIMULADOR DE MOVIMENTO DE PEÇAS DE XADREZ ===\n");
        printf("1 - Torre\n2 - Bispo\n3 - Rainha\n4 - Cavalo\n5 - Sair\n");
        printf("Escolha uma opção: ");
        if (scanf("%d", &opcao) != 1) return 0;

        printf("\n");
        switch (opcao) {
            case 1:
                printf("=== Movimento da Torre ===\n");
                for (int i = 1; i <= movimentoTorre; i++)
                    printf("Casa %d: Direita\n", i);
                break;

            case 2:
                printf("=== Movimento do Bispo ===\n");
                {
                    int contador = 1;
                    while (contador <= movimentoBispo) {
                        printf("Casa %d: Cima, Direita\n", contador);
                        contador++;
                    }
                }
                break;

            case 3:
                printf("=== Movimento da Rainha ===\n");
                {
                    int passo = 1;
                    do {
                        printf("Casa %d: Esquerda\n", passo);
                        passo++;
                    } while (passo <= movimentoRainha);
                }
                break;

            case 4:
                /* 
                 Cavalo: mover 2 casas para baixo e 1 para a esquerda.
                 Uso de loops aninhados:
                 - loop for (obrigatório) controla as duas casas para baixo;
                 - loop while (aninhado) executa a(s) casa(s) à esquerda
                   apenas após terminar o movimento vertical.
                 */
                printf("=== Movimento do Cavalo ===\n\n"); /* linha em branco antes do movimento */
                for (int i = 1; i <= movimentoCavaloBaixo; i++) {
                    /* movimento vertical (duas vezes) */
                    printf("Casa %d: Baixo\n", i);

                    /* ao terminar o movimento vertical, faz o movimento horizontal usando while */
                    if (i == movimentoCavaloBaixo) {
                        int j = 1;
                        while (j <= movimentoCavaloEsquerda) {
                            printf("Casa %d: Esquerda\n", movimentoCavaloBaixo + j);
                            j++;
                        }
                    }
                }
                break;

            case 5:
                printf("Encerrando o programa.\n");
                break;

            default:
                printf("Opção inválida. Digite um número entre 1 e 5.\n");
                break;
        }

    } while (opcao != 5);

    return 0;
}
